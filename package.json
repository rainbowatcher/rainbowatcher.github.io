  "repository": "https://github.com/rainbowatcher/rainbowatcher.github.io.git",
  "main": "index.js",
  "scripts": {
    "clean": "pnpm --stream -r clean",
    "build": "pnpm --stream -r build && pnpm --parallel --stream -r copy",
    "docs:dev": "vuepress dev --clean-cache",
    "docs:build": "vuepress build --clean-cache",
    "check": "pnpm exec lychee -c lychee.toml -f markdown posts",
    "preview": "anywhere -d .vuepress/dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@rainbowatcher/vuepress-plugin-code-copy": "workspace:*",
    "@renovamen/vuepress-plugin-katex": "^2.0.0-alpha.24",
    "@renovamen/vuepress-plugin-md-plus": "^2.0.0-alpha.24",
    "@renovamen/vuepress-plugin-mermaid": "^2.0.0-alpha.24",
    "@vuepress/client": "^2.0.0-beta.46",
    "anywhere": "^1.6.0",
    "cpx": "^1.5.0",
    "eslint": "^8.20.0",
    "oh-vue-icons": "1.0.0-rc3",
    "vue": "^3.2.37",
    "vuepress": "^2.0.0-beta.46",
    "vuepress-plugin-giscus": "^2.0.0-alpha.24",
    "vuepress-theme-gungnir": "^2.0.0-alpha.24"
  },
  "eslintConfig": {
    "extends": "@antfu",
    "ignorePatterns": [
      "**/lib/*"
    ]
  }
