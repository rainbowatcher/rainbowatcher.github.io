{
  "name": "rainbowatcher.github.io",
  "version": "1.0.0",
  "author": "rainbowatcher <rainbow-w@qq.com>",
  "license": "MIT",
  "repository": "https://github.com/rainbowatcher/rainbowatcher.github.io.git",
  "main": "index.js",
  "scripts": {
    "clean": "pnpm --stream -r clean",
    "build": "pnpm --stream -r build && pnpm --parallel --stream -r copy",
    "docs:dev": "pnpm --filter docs docs:dev",
    "docs:build": "pnpm --filter docs docs:build",
    "check": "pnpm exec lychee -c lychee.toml -f markdown .",
    "preview": "anywhere -d docs/.vuepress/dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "anywhere": "^1.6.0",
    "cpx": "^1.5.0",
    "eslint": "^8.20.0",
    "vue": "^3.2.37",
    "vuepress": "^2.0.0-beta.46"
  },
  "eslintConfig": {
    "extends": "@antfu",
    "ignorePatterns": [
      "**/lib/*"
    ]
  }
}
