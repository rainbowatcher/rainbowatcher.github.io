{
    "name": "rainbowatcher.github.io",
    "type": "module",
    "version": "0.0.4",
    "packageManager": "pnpm@9.4.0",
    "author": "rainbowatcher <rainbow-w@qq.com>",
    "license": "MIT",
    "repository": "https://github.com/rainbowatcher/rainbowatcher.github.io.git",
    "main": "index.js",
    "engines": {
        "node": ">=20",
        "pnpm": ">=9"
    },
    "scripts": {
        "clean": "nuxi cleanup && pnpm --stream -r clean",
        "check": "pnpm exec lychee -c lychee.toml -f markdown content",
        "build": "pnpm generate",
        "generate": "nuxi generate",
        "prepare": "nuxi prepare && simple-git-hooks",
        "preview": "nuxi preview",
        "docs:dev": "pnpm --filter docs docs:dev",
        "docs:build": "pnpm --filter docs docs:build",
        "dev": "nuxi dev",
        "lint": "eslint .",
        "lint:inspect": "config-inspector --open"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.2.2",
        "@docsearch/css": "^3.6.0",
        "@docsearch/js": "^3.6.0",
        "@eslint/config-inspector": "^0.4.11",
        "@iconify-json/line-md": "^1.1.37",
        "@iconify-json/mdi": "^1.1.66",
        "@iconify-json/ph": "^1.1.13",
        "@nuxt/content": "^2.12.1",
        "@nuxt/eslint": "^0.3.13",
        "@nuxt/fonts": "^0.7.0",
        "@nuxt/image": "^1.7.0",
        "@nuxtjs/algolia": "^1.10.2",
        "@nuxtjs/color-mode": "^3.4.1",
        "@nuxtjs/i18n": "^8.3.1",
        "@rainbowatcher/eslint-config": "^0.9.0",
        "@rainbowatcher/eslint-config-ignore": "^0.9.0",
        "@rainbowatcher/eslint-config-js": "^0.9.0",
        "@rainbowatcher/eslint-config-json": "^0.9.0",
        "@rainbowatcher/eslint-config-md": "^0.9.0",
        "@rainbowatcher/eslint-config-prettier": "^0.9.0",
        "@rainbowatcher/eslint-config-ts": "^0.9.0",
        "@rainbowatcher/eslint-config-unocss": "^0.9.0",
        "@rainbowatcher/eslint-config-vue": "^0.9.0",
        "@unocss/nuxt": "^0.61.0",
        "@vueuse/motion": "^2.2.3",
        "@vueuse/nuxt": "^10.11.0",
        "commitlint": "^19.3.0",
        "cpx": "^1.5.0",
        "eslint": "^9.5.0",
        "katex": "^0.16.10",
        "lint-staged": "^15.2.7",
        "mermaid": "^10.9.1",
        "nanoid": "^5.0.7",
        "nuxt": "^3.12.2",
        "radix-vue": "^1.8.4",
        "rehype-external-links": "^3.0.0",
        "rehype-katex": "^7.0.0",
        "rehype-parse": "^9.0.0",
        "rehype-stringify": "^10.0.0",
        "remark-flexible-containers": "^1.2.1",
        "remark-math": "^6.0.0",
        "rimraf": "^5.0.7",
        "serve": "^14.2.3",
        "simple-git-hooks": "^2.11.1",
        "std-env": "^3.7.0",
        "typescript": "^5.4.5",
        "vaul-vue": "^0.2.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint --edit $1"
    },
    "lint-staged": {
        "*.{ts,json}": "eslint"
    }
}
